# Core application settings
APP_NAME=AI Powered Recommendation Engine
APP_ENV=development
APP_DEBUG=true
API_V1_PREFIX=/api
SECRET_KEY=super-secret-key-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=4320
JWT_ALGORITHM=HS256

# Database settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=ai_recs
DATABASE_SYNC_URL=postgresql+psycopg://app:app@postgres:5432/ai_recs
DATABASE_ASYNC_URL=postgresql+asyncpg://app:app@postgres:5432/ai_recs

# Redis / Celery
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Feature flags
DEFAULT_MODEL_VERSION=v1
FEATURE_FLAG_CACHE_TTL=300

# Observability
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# Email / notifications (placeholder values)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_FROM=no-reply@example.com

# Security
RATE_LIMIT_PER_MINUTE=60
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=4

# Frontend
TAILWIND_DARK_MODE=true
